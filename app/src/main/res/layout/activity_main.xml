<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/rg_ad_providers"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title"

        app:layout_constraintRight_toLeftOf="@id/tv_title">
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rb_adcolony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AdColony" />
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rb_admob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AdMob" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/watch_ads_to_get_rewards"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_show_ad"
        app:layout_constraintLeft_toRightOf="@id/rg_ad_providers"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btn_show_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@id/tv_ad_provider"
        app:layout_constraintLeft_toRightOf="@id/rg_ad_providers"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onWatchAdClick"
        android:text="Watch"/>

    <TextView
        android:id="@+id/tv_ad_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_show_ad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rg_ad_providers"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Adcolony"
        />


</android.support.constraint.ConstraintLayout>